package com.tjoeun.syncronizedMethodTest;

public class Student2 extends Thread {

	public Student2() {	}

	public Student2(String name) {
		super(name);
	}
	@Override
	public void run() {
		
//		도서 대여
		try {
			String book = LibraryMain2.library.lendBook();
			if(book ==null) {
				return;
			}
			sleep(2500);
			LibraryMain2.library.returnBook(book);
		} catch (InterruptedException e) {
//			e.printStackTrace();
		} catch (IndexOutOfBoundsException e) {
			System.out.println("책을 빌리지 못했습니다.");
		}
		
		
	}
	
	
}
